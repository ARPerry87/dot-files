#!/bin/bash

MY_REMOTE_SSH_PORT=2346
MY_REMOTE_RAILS_PORT=2347

ssh -M -N -f \
  -L 127.0.0.1:4000:127.0.0.1:13000 \
  -L 127.0.0.1:2222:127.0.0.1:2345 \
  -L 127.0.0.1:2223:127.0.0.1:2355 \
  -L 127.0.0.1:2224:127.0.0.1:2346 \
  -L 127.0.0.1:2225:127.0.0.1:2348 \
   -R 127.0.0.1:$MY_REMOTE_SSH_PORT:127.0.0.1:22 \
   -R 127.0.0.1:$MY_REMOTE_RAILS_PORT:127.0.0.1:3000 \
  ut.eclipsing.com
